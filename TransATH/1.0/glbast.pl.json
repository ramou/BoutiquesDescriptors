{
    "tool-version": "v1.0",
    "name": "TranCEP",
    "author": "Alballa M, Aplop F, Butler G",
    "command-line": "glbast [INPUT] [OUTPUT_DIR] [EVALUE] [COVERAGE]",
    "container-image": {
        "type": "singularity",
        "image": "bioinformatics-group/TranCPE",
        "index": "shub://",
        "container-opts": [
                "-H $PWD"
        ]
    },
    "description": "Predicts the protein classification for provided sequences.",
    "inputs": [
        {
            "description": "A file containing one or more input sequences in fasta format",
            "id": "input",
            "name": "Input Sequences",
            "optional": false,
            "type": "File",
            "value-key": "[INPUT]"
        },
        {
            "description": "  Expectation value (E) threshold for saving hits",
            "id": "evalue",
            "name": "Expectation Value",
            "optional": false,
            "type": "Number", 
            "value-choices": [
               0,
               0.00000000000000000000000000000000000000000000000001,
               0.000000000000000000000000000001,
               0.00000000000000000001,
               0.0000000001,
               0.00001,
               0.1
            ], 
            "value-key": "[EVALUE]"
        },
        {
            "command-line-flag": "-coverage",
            "description": "Coverage",
            "id": "coverage",
            "name": "Coverage",
            "optional": false,
            "type": "Number", 
            "value-choices": [
               0,
               30,
               40,
               50,
               60,
               70
            ], 
            "value-key": "[COVERAGE]"
        },
        {
        	"command-line-flag": "-out",
        	"command-line-flag-separator": "=",
            "description": "The directory where the results (and intermediate data) are stored. The default location is the same directory as the input sequence.",
            "id": "output_dir",
            "name": "Output Directory",
            "default-value": ".",
            "optional": true,
            "type": "File",
            "value-key": "[OUTPUT_DIR]"
        }
    ],
    "output-files": [
        {
            "id": "outclass",
            "name": "Protein Classification",
            "path-template": "result/[OUTPUT_DIR]/out.csv",
            "optional": false
        }
    ],
    "schema-version": "0.5",
    "suggested-resources": {
        "cpu-cores": 1,
        "ram": 1,
        "walltime-estimate": 60
    },
    "tags": {"domain": ["bioinformatics", "TranCEP"]},
    "tests": [
        {
	     "name": "test1",
	     "invocation": {
               "input": "test.fasta"
            },
            "assertions": {
                "exit-code": 0,
                "output-files": [
                    {
                        "id": "outclass",
                        "md5-reference": "3d7701cfa7b559aec55155899f716065"
                    }
                ]
            }
        }
    ]
}